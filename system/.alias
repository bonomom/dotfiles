alias ls="ls --color"			# Force color for ls.
alias l="ls -la --color"		# List in long format, include dotfiles.
alias la="ls -la --color"		# List in long format, include dotfiles.
alias ld="ls -ld */ --color"	# List in long format, only directories.
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
